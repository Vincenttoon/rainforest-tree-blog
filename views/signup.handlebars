{{!-- signup form --}}
<form class="signup-form">
    <div class="login-div">
        <label for="username-signup">Username:</label>
        <input class="login-input" type="text" id="username-signup" />
    </div>
    <div class="login-div">
        <label for="email-signup">Email Address:</label>
        <input class="login-input" type="text" id="email-signup" />
    </div>
    <div class="login-div">
        <label for="password-signup">Password:</label>
        <input class="login-input" type="password" id="password-signup" />
    </div>
    <div class="login-div">
        <button type="submit">Signup!</button>
    </div>
</form>

<script src="/js/signup.js"></script>